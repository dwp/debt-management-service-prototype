{% macro keyDetails(Person) %}
<section class="key-details-bar" role="contentinfo" aria-label="Key details">
  <dl class="key-details-bar__key-details">
    <div class="key-details-bar__top-block">
      <dt class="visually-hidden">Name:</dt>
      <dd class="key-details-bar__name">{{ Person.name }}</dd>

      <dt class="visually-hidden">National Insurance number:</dt>
      <dd class="key-details-bar__nino">{{ Person.nino }}</dd>

      <!-- <dt class="visually-hidden">Claim status:</dt>
      <dd class="key-details-bar__status">On Benefit</dd> -->
    </div>

    <div class="key-details-bar__bottom-block key-details-bar__bottom-block-status">
      <dt class="visually-hidden">Claim status:</dt>
      <dd class="key-details-bar__status float-left">On Benefit</dd>

      <dt class="visually-hidden">Benefits</dt>
      <dd>Universal Credit</dd>

      <!-- <dt>Date of birth:</dt>
      <dd>4 June 1972</dd>

      <dt>Mobile:</dt>
      <dd>07771 900 900</dd>

       -->
    </div>
  </dl>
</section>
{% endmacro  %}