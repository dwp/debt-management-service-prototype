{% macro header(name, nino, onBenefit, benefits) %}

<header>
  <h1 class="govuk-heading-l govuk-!-margin-bottom-3">
      {{ name }}
  </h1>
  <p class="govuk-heading-m">
      {{ nino }}
  </p>
  <div class="tag-bar govuk-!-margin-bottom-4">
      <p class="govuk-body">
          
          {% if onBenefit %}
            <strong class="govuk-tag">
                On benefit
            </strong>
        {% else %}
            <strong class="govuk-tag govuk-tag--grey">
                Off benefit
            </strong>
         {% endif %}

          <span class="display_inline-block govuk-!-margin-left-2">{{ benefits }}</span>
      </p>
  </div>
</header>
<hr>

{% endmacro %}